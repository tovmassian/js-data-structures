{
	"compilerOptions": {
		"target": "es6",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"lib": [
			"es2017",
			"es7",
			"es6"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
